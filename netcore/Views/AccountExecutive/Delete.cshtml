@model netcore.Models.Crm.AccountExecutive
@inject netcore.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminlteNetcoreDelete.cshtml";
    ViewData["EntityIcon"] = "fa fa-user";
    ViewData["DeleteInfo"] = "Account Executive that already have transactions can not be deleted.";
    netcore.Models.Crm.Lead del = _context.Lead.Where(x => x.accountExecutiveId.Equals(Model.accountExecutiveId)).FirstOrDefault();
    ViewData["IsCanDeleted"] = false;
    if (del == null)
    {
        ViewData["IsCanDeleted"] = true;
    }
    var sysUser = "";
    var ApplicationUser = _context.ApplicationUser.Where(x => x.Id.Equals(Model.systemUserId)).FirstOrDefault();
    if (ApplicationUser != null)
    {
        sysUser = ApplicationUser.Email;
    }
}


