@model IEnumerable<netcore.Models.Crm.Rating>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
    ViewData["EntityIcon"] = "fa fa-star";
    ViewData["ListTitle"] = "Rating List";
    ViewData["IndexInfo"] = "Rating qualification for your opportunity";
}


<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ratingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.colorHex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="tools">
                        <a asp-action="Edit" asp-route-id="@item.ratingId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                        <a asp-action="Details" asp-route-id="@item.ratingId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.ratingId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ratingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    <span class="label" style="background-color:@item.colorHex">
                        @Html.DisplayFor(modelItem => item.colorHex)
                    </span>
                    
                </td>

            </tr>
        }
    </tbody>
</table>
