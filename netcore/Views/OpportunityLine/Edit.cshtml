@model netcore.Models.Crm.OpportunityLine

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminlteNetcoreEdit.cshtml";
    }


<div class="row">
    <div class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="opportunityLineId" />
                    <div class="form-group hidden">
                        <label asp-for="opportunityId" class="control-label"></label>
                        <select asp-for="opportunityId" class="form-control select2" asp-items="ViewBag.opportunityId"></select>
                        <span asp-validation-for="opportunityId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="activityId" class="control-label"></label>
                        <select asp-for="activityId" class="form-control select2" asp-items="ViewBag.activityId"></select>
                        <span asp-validation-for="activityId" class="text-danger"></span>
                    </div>
                <div class="form-group">
                    <label asp-for="startDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="startDate" class="form-control pull-right datepicker" type="text"/>
                    </div>
                    <span asp-validation-for="startDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="endDate" class="control-label"></label>
                    <div class="input-group date">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="endDate" class="form-control pull-right datepicker" type="text"/>
                    </div>
                    <span asp-validation-for="endDate" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="description" class="control-label"></label>
                        <input asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
    </div>
</div>








            @section Scripts {
                 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }



