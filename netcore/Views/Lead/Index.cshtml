@model IEnumerable<netcore.Models.Crm.Lead>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminlteNetcoreIndex.cshtml";
    ViewData["EntityIcon"] = "fa fa-street-view";
    ViewData["ListTitle"] = "Lead List";
    ViewData["IndexInfo"] = "Lead is your raw prospect that need to be qualified by followup with certain activities";
}

<form method="post" enctype="multipart/form-data" asp-controller="Lead" asp-action="UploadFiles">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" class="btn btn-primary margin-bottom" name="files" multiple>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-primary margin-bottom" value="Upload">
        </div>
    </div>
</form>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.leadName)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.street1)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.street2)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.city)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isQualified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isConverted)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.customerId)
            </th>
            <th class="hidden">
                @Html.DisplayNameFor(model => model.accountExecutive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.channel)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="tools">
                    <a asp-action="Edit" asp-route-id="@item.leadId" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a>
                    <a asp-action="Details" asp-route-id="@item.leadId" class="btn btn-primary btn-xs"><i class="fa fa-list"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.leadId" class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.leadName)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.street1)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.street2)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isQualified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isConverted)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.customerId)
            </td>
            <td class="hidden">
                @Html.DisplayFor(modelItem => item.accountExecutive.accountExecutiveId)
            </td>
            <td>
                @*<span class="label" style="background-color:@item.channel.colorHex">
                    @Html.DisplayFor(modelItem => item.channel.channelName)
                </span>*@
                
            </td>

        </tr>
        }
    </tbody>
</table>
